<!DOCTYPE html>
<html>
  <head>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link href="https://cdn.bootcss.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.bootcss.com/vue/2.5.16/vue.min.js"></script>
    <script src="https://cdn.bootcss.com/axios/0.18.0/axios.min.js"></script>
  </head>
  <body>
    <div id="app">
      <div class="container">
        <div class="col-md-8 col-md-offset-2">
          <h1>新建文章</h1>
            <form>
                <div class="form-group">
                    <input type="text" class="form-control" v-model="title" placeholder="请输入文章标题">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="10" v-model="content" placeholder="请输入内容"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-default" v-on:click="submit">提交</button>
                </div>
            </form>
        </div>
      </div>
    </div>
  </body>
</html>
<script>
  var vm = new Vue({
    el:'#app',
    data:{
      title: '',
      content: ''
    },
    methods: {
      submit () {
        axios.post('/api/posts/create', {
            title: vm.title,
            content: vm.content,
        })
        .then(function (response) {
            alert(JSON.stringify(response.data));
        })
        .catch(function (err) {
            console.log(err.message);
        })
      }
    }
  });
</script>
